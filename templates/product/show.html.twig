    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_product_edit', {'id': product.id}) }}">modifier</a>
    <a class="btn btn-primary" href="{{ path('app_product_stock_add-history', {'id': product.id}) }}">affiche l'istrorique du stock</a>
    <br><br>
    {{ include('product/_delete_form.html.twig') }}
